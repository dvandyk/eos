#!/usr/bin/env python3

from setuptools import setup, Extension

try:
    from wheel.bdist_wheel import bdist_wheel as _bdist_wheel
    class bdist_wheel(_bdist_wheel):
        def finalize_options(self):
            _bdist_wheel.finalize_options(self)
            self.root_is_pure = False
except ImportError:
    bdist_wheel = None

setup(
    name='eoshep',
    version='@VERSION@',
    description='EOS',
    author='Danny van Dyk and others',
    author_email='danny.van.dyk@gmail.com',
    url='https://eos.github.io/',
    packages=['eos', 'eos.data', 'eos.plot', '_eos_libs', '_eos_data'],
    package_dir={
        '_eos_libs': '',
        '_eos_data': '_eos_data',
    },
    package_data={
        '_eos_libs': ['lib*.so*'],
        '_eos_data': ['constraints/*.yaml', 'parameters/*.yaml'],
    },
    include_package_data=True,
    ext_modules=[Extension('_eos', sources=[])],
    python_requires='>3.5'
)
